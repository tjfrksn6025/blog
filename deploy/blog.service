[Unit]
Description=FastAPI Blog Application
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/blog
Environment="PATH=/home/ubuntu/blog/venv/bin"
ExecStart=/home/ubuntu/blog/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
